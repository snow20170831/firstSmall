/**index.wxss**/
swiper {
  height: 340rpx;
}
.slide-image {
  width: 750rpx;
  height: 340rpx;
}

/* 产品列表 */
.pro {
  margin: 0 20rpx;
}
.pro-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  width: 100%;
  height: 230rpx;
}
.pro-item:last-child {
  border: none;
}
.item-pic {
  float: left;
  width: 230rpx;
  height: 230rpx;
}
.item-content {
  margin-left: 250rpx;
}
.content-title {
  font-size: 36rpx;
  color: #212121;
}
.content-desc {
  display: block;
  font-size: 25rpx;
  color: #9a9a9a;
  line-height: 1.7;
}
.btn-detail {
  width: 170rpx;
  height: 52rpx;
}
button.btn-ask {
  display: inline-block;
  margin: 0 0 0 20rpx;
  padding: 0;
  width: 224rpx;
  height: 52rpx;
  line-height: 1;
}
.btn-ask image {
  width: 100%;
  height: 100%;
}